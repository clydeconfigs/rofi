#!/bin/bash 

file_path="$HOME/Media/Random/bm3/bm3_data.txt"

delete_entry() {
    selected_line=$(cat "$file_path" | sed '1!G;h;$!d' | rofi -dmenu -p "Select information to delete" -width 60 -location 0 -font 'Comic Mono 18' )
    [ -n "$selected_line" ] && sed -i "/$(echo "$selected_line" | sed 's/[\/&]/\\&/g')/d" "$file_path"
}

save_info() {
    echo "$(date '+%Y-%m-%d %H:%M:%S'): $1" >> "$file_path"
}

select_info() {
    selected_line=$(cat "$file_path" | sed '1!G;h;$!d' | rofi -font 'Comic Mono 18'  -dmenu -p "Select information" -width 60 -location 0 -font 'Comic Mono 18' )

    [ -n "$selected_line" ] && entry=$(echo -n "$selected_line" | cut -d' ' -f3-) && echo "$selected_line" | grep "https://" && { 
        choice=$(echo -e "Yes\nNo" | rofi -font 'Comic Mono 18'  -dmenu -p "Do you want to open in browser?" -i -lines 2 -width 20)
        case $choice in
            "Yes") waterfox "$entry" && exit 0 ;;
            "No") echo -n "$entry" | xclip -selection clipboard ;;
        esac
    } || { 
        echo -n "$entry" | xclip -selection clipboard 
        test $(echo "$entry" | wc -c) -gt 30 && rofi -font 'Comic Mono 18'  -e "$entry"
    }
}

options=("show (x)" "save (b)" "delete (d)")

selected_option=$(printf "%s\n" "${options[@]}" | rofi -dmenu -p "Select an option" -font 'Comic Mono 18' )

case $selected_option in
    "save (b)")
        new_info=$(rofi -dmenu -p "Enter information to save" -font 'Comic Mono 18' )  
        [ -n "$new_info" ] && save_info "$new_info"
        ;;
    "show (x)")
        select_info
        ;;
    "delete (d)")
        delete_entry
        ;;
esac
