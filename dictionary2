#!/bin/bash 

query=$(rofi -dmenu -i -p "Search in dictionary" -font 'Comic Mono 18'  -show-icons -lines 0 -no-fixed-num-lines)

results=$(grep --color=auto -i "^$query" "/home/clyde/Media/PDF and Books/Oxford English Dictionary.txt" | head -n 4 | sed G)

if [ -n "$query" ]; then
    rofi -font 'Comic Mono 18'  -e "$results"
fi
